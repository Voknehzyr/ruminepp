{
    "manifest_version": 2,
    "name": "RuMine++",
    "version": "1.1.3",
    "description": "Make RuMine great again!",
    "icons": {"128": "icon.png"},
    "content_scripts": [
        {
            "matches": ["http://ru-minecraft.ru/*", "https://ru-minecraft.ru/*"],
            "js": ["inject.js"],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "build/content.js",
        "build/html/settings.html"
    ]
}